<div class="container controller argument show">
<% proponent = @arg.proponent ? "For" : "Against" %>
<h1 class="<%=proponent%>-title"><%= proponent %> 
<%= link_to Debate.find(@arg.debate_id).title, debate_path(@arg.debate_id)%>:</h1>
<div class="main-chunk">
  <h2><%= @arg.title %></h2>

  <div class="subtitle">
  <p class="creator"><%= link_to User.find(@arg.creator_id).username, user_path(@arg.creator_id) %></p>
  <p class="date"><%= @arg.created_at.strftime( "%m.%d.%Y" ) %>
  </div>

  <pre><%= @arg.description %></pre>
  <% if @links.count > 0 %>
    <h4>References:</h4>
    <ul>
      <% @links.each do |l| %>
        <!-- to make link work -->
        <% if l[0..3] != "http" %>
          <% link = "https://#{l}" %>
        <% else link = l %>
        <% end %>

        <li><a href="<%= link %>" target="_blank"><%= l %></a></li>
      <% end %>
    </ul>
  <% end %>
</div>

  <%= render partial: "counter_supporter_grid", locals: {type: "supporter", 
                                                         arguments: @supporter_arguments} %>
  <%= render partial: "counter_supporter_grid", locals: {type: "counter", 
                                                         arguments: @counter_arguments} %>
</div>
