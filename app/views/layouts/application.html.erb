<!DOCTYPE html>
<html>
<head>
  <title>DebateGate</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% if flash[:success] or flash[:notice] %>
    <div class="flash success">
      <p><%= flash[:success] %></p>
      <p><%= flash[:notice] %></p>
    </div>
  <% elsif flash[:danger] or flash[:alert] %>
    <div class="flash danger">
      <p><%= flash[:danger] %></p>
      <p><%= flash[:alert] %></p>
    </div>
  <% end %>

  <div class="header">
    <h1>DebateGate</h1>
  </div>

<%= yield %>

<div class="footer">
  <%= params.each do |m| %>
    <p><%= m %></p>
  <% end %>
</div>

<div class="footer buttons">
  <%= link_to "Home", root_path %>
  <%= link_to "View Debates", debates_path %>
  <%= link_to "New Debate", new_debate_path %>
  <%= link_to "Edit Profile", edit_user_registration_path if user_signed_in? %>
</div>

</body>
</html>
