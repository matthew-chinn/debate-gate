<div class="container <%=type%>-arg ">
<% word = type == "pro" ? "for" : "against" %>

<div class="<%=type%> list">
  <%= link_to "Create new argument #{word}", new_argument_path(id: @debate, side: "#{type}") %>
  <% if arguments %>
    <% arguments.each do |a| %>
      <div class="argument" id="<%= type %>-arg<%= a.id %>">
        <div class="title row">
          <h5><%= a.order %>. <%= a.title %></h5>
        </div>
        <div class="row">
          <p class="star">&#9734</p>
          <p class="description"><%= a.description%></p>
          <div class="buttons">
            <a class="btn">Supporters</a>
            <a class="btn">Counters</a>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>

</div>
